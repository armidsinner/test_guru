<h2>Стать Гуру</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, 'Имя' %><br />
    <%= f.text_field :first_name, id: :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, 'Фамилия' %><br />
    <%= f.text_field :last_name, id: :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= octicon 'check-circle', class: 'text-success hide' %>
    <%= octicon 'alert', class: 'text-warning hide' %>
  </div>

  <div id ="check-coincidence" class="check-field">
    <%= f.label :password_confirmation, 'Подтвердите пароль' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= octicon 'check-circle', class: 'text-success hide' %>
    <%= octicon 'alert', class: 'text-warning hide' %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

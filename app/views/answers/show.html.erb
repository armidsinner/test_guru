<h1>Вопрос</h1>

<p>
  <%= @answer.question.title %>
</p>

<p>
  <b>Ответ:</b>
  <%= @answer.title %>
</p>

<p>
  <b>Верный ответ?</b>
  <%= @answer.correct %>
</p>

<%= link_to 'Редактировать', edit_answer_path(@answer) %> |
<%= link_to 'Назад', question_path(@answer.question) %> |
<%= link_to 'Удалить', @answer, method: :delete, data: { confirm: 'Вы уверены?' } %>

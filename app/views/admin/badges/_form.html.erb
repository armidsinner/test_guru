<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>


  <p>
    <%= form.label :title, 'Название'%>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :rule , 'Правило'%>
    <%= form.select :rule, Badge.rules.keys, prompt: 'Выберите правило' %>
  </p>

  <p>
    <%= form.label :image, 'Изображение' %>
    <%= form.text_field :image %>
  </p>

  <p>
    <%= form.label :description, 'Описание' %>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :params, 'Параметр правила' %>
    <%= form.text_field :params %>
  </p>

  <p><%= form.submit 'Сохранить' %></p>
<% end %>

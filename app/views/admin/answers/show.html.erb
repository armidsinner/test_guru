<h1>Вопрос</h1>

<p>
  <%= @answer.question.title %>
</p>

<p>
  <b>Ответ:</b>
  <%= @answer.title %>
</p>

<p>
  <b>Верный ответ?</b>
  <%= @answer.correct %>
</p>

<%= link_to 'Редактировать', edit_admin_answer_path(@answer) %> |
<%= link_to 'Назад', admin_question_path(@answer.question) %> |
<%= link_to 'Удалить', admin_answer_path(@answer),
                       method: :delete,
                       data: {confirm: 'Вы уверены?'} %>

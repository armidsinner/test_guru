<%= form_with model: [:admin, @question, @answer] do |form| %>
  <%= render 'shared/errors', resource: @answer%>

  <p>
    <%= form.label :title, 'Название' %><br>
    <%= form.text_area :title, id: :answer_title, rows: 7, cols: 60%>
  </p>

  <p>
    <%= form.label :correct, 'Правильный ответ?' %> : 
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <div class="actions">
    <%= form.submit 'Сохранить' %>
  </div>
<% end %>

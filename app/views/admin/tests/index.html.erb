<h1>Список всех тестов</h1>

<table class="table">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        Название
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th>Уровень сложности</th>
      <th>Количество вопросов</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
  
<table>

<p>
  <%= link_to 'Создать тест', new_admin_test_path(@test) %>
</p>
